{% extends 'base.html.twig' %}

{% block title %}{{student.prenom}} {{student.nom}}{% endblock %}

{% block h1 %}<h1>{{student.prenom}} {{student.nom}} • {{promotion.nom}}</h1>{% endblock %}

{% block body %}

    <div class="breadcrumb">
        <div class="container">
            <a href="{{ path("promotion") }}" >
                <img src="{{asset('assets/img/home.svg')}}" alt="retour à l'accueil" class="icon">
                Accueil
            </a>
            <span>/</span>
            <a href="{{ path("students_list", {'promotion': promotion.id}) }}">
                {{promotion.nom}}
            </a>
        </div>
    </div>

    <main class="container">
        <div class="profile-content ">
            <div class="card-container">
                <div class="card card-profile">
                    <img src="{{ asset('assets/img/students/' ~ student.imgSrc) }}" alt="{{student.prenom}} {{student.nom}}">
                    <h2>{{student.prenom}} {{student.nom}}</h2>
                </div>
            </div>
            <div class="infos">
                <div class="background card">
                    <h2>Background</h2>
                    <p>{{student.background}}</p>
                </div>
                <div class="entreprise card ">
                    <h2>Entreprise</h2>
                    <p>{{student.company}}</p>
                </div>
                <div class="missions card">
                    <h2>Missions</h2>
                    <p>{{student.mission}}</p>
                </div>
                <div class="portrait card">
                    <h2>Portrait Chinois</h2>
                    <ul class="portrait-list">
                        <li class="portrait-list-label">Film</li>
                        <li class="portrait-list-value">{{student.film}}</li>
                    </ul>
                    <ul class="portrait-list">
                        <li class="portrait-list-label">Série</li>
                        <li class="portrait-list-value">{{student.serie}}</li>
                    </ul>
                    <ul class="portrait-list">
                        <li class="portrait-list-label">Jeu Vidéo</li>
                        <li class="portrait-list-value">{{student.jv}}</li>
                    </ul>
                    <ul class="portrait-list">
                        <li class="portrait-list-label">Héros/Héroïne</li>
                        <li class="portrait-list-value">{{student.hero}}</li>
                    </ul>
                    <ul class="portrait-list">
                        <li class="portrait-list-label">Livre</li>
                        <li class="portrait-list-value">{{student.livre}}</li>
                    </ul>
                    <ul class="portrait-list">
                        <li class="portrait-list-label">Chanson</li>
                        <li class="portrait-list-value">{{student.chanson}}</li>
                    </ul>
                    <ul class="portrait-list">
                        <li class="portrait-list-label">Application</li>
                        <li class="portrait-list-value">{{student.application}}</li>
                    </ul>
                    <ul class="portrait-list">
                        <li class="portrait-list-label">Site web</li>
                        <li class="portrait-list-value">{{student.site}}</li>
                    </ul>
                    <ul class="portrait-list">
                        <li class="portrait-list-label">Langage</li>
                        <li class="portrait-list-value">{{student.langage}}</li>
                    </ul>
                </div>
            </div>
            <div class="slack-dm card card-profile">
                <img src="{{ asset('assets/img/slack.svg') }}" alt="slack logo" class="icon">
                <a class="slack-link" href="slack://user?team=T0C02PAUW&id={{student.slack}}">Contacter sur Slack</a>
            </div>
        </div>
    </main>


{% endblock %}

{% block linksfooter %}
    {% for link in links %}
        {% if (link.type is same as ("slack")) or (link.type is same as ("other")) %}
            <li class="link-list-items">
                <img src="
                    {% if link.type is same as ("slack") %}
                        {{ asset('assets/img/slack.svg') }}
                    {% else %}
                        {{ asset('assets/img/cefim.png') }}
                    {% endif %}
                " alt="logo slack" class="icon">
                <a href="{{ link.href }}" target="_blank">{{ link.name }}</a>
            </li>
        {% endif %}
    {% endfor %}
{% endblock %}

{% block coursesfooter %}
    {% for link in links %}
        {% if link.type is same as ("cours") %}
            <li class="link-list-items"><img src="{{ asset('assets/img/cefim.png') }}" alt="logo cefim" class="icon"><a href="{{link.href}}" target="_blank">{{link.name}}</a>
            </li>
        {% endif %}
    {% endfor %}
{% endblock %}

{% block googlefooter %}
    {% for link in links %}
        {% if link.type is same as ("googleDrive") %}
            <li class="link-list-items"><img src="{{ asset('assets/img/google-drive.svg') }}" alt="logo google drive" class="icon"><a href="{{link.href}}" target="_blank">{{link.name}}</a>
            </li>
        {% endif %}
    {% endfor %}
{% endblock %}